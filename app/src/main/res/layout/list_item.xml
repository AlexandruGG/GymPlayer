<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/song_height"
    android:background="@color/colorBackground"
    android:minHeight="@dimen/song_height">

    <ImageView
        android:id="@+id/image_album"
        android:layout_width="@dimen/song_height"
        android:layout_height="@dimen/song_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_album"
        android:orientation="vertical"
        android:paddingLeft="@dimen/playlist_margin">

        <TextView
            android:id="@+id/text_song_name"
            style="@style/SongStyle"
            tools:text="Song Name" />

        <TextView
            android:id="@+id/text_artist_name"
            style="@style/ArtistStyle"
            tools:text="Artist Name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/playlist_margin"
        android:src="@drawable/ic_play_button" />
</RelativeLayout>